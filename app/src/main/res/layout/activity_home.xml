        app:layout_constraintEnd_toEndOf="@+id/image_view_day_5"
        app:layout_constraintStart_toStartOf="@+id/image_view_day_5"
        app:layout_constraintTop_toBottomOf="@+id/image_view_day_5" />

    <TextView
        android:id="@+id/text_view_day_6"
        android:layout_width="wrap_content"
