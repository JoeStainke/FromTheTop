        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/image_view_day_2"
        app:layout_constraintStart_toStartOf="@+id/image_view_day_2"
        app:layout_constraintTop_toBottomOf="@+id/image_view_day_2" />

