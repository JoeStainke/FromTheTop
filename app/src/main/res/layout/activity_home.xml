        android:src="@drawable/circle_fill_green"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/image_view_day_6"
        app:layout_constraintTop_toTopOf="@+id/image_view_day_4" />

    <ImageView
        android:id="@+id/image_view_day_1_no"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/circle_fill_red"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/image_view_day_2"
