        app:layout_constraintEnd_toEndOf="@+id/image_view_day_7"
        app:layout_constraintStart_toStartOf="@+id/image_view_day_7"
        app:layout_constraintTop_toBottomOf="@+id/image_view_day_7" />

    <TextView
        android:id="@+id/text_view_home_quiz_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="You've taken a quiz on _ days this week."
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/text_view_home_quiz_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_view_home_quiz_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="_ more days to reach your goal."
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_streak_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/button_home_to_topics"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_marginTop="38dp"
        android:text="@string/learn"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_name_home" />

    <Button
        android:id="@+id/button_home_to_quiz_select"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_marginTop="38dp"
        android:text="@string/quiz"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_home_to_topics" />

    <Button
        android:id="@+id/button_home_to_stats"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_marginTop="38dp"
        android:text="@string/stats"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
